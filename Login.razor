@code {
    private string username;
    private string password;
    private bool loginError;

    private async Task HandleLogin()
    {
        if (username == "usuario" && password == "contraseña")
        {
            Console.WriteLine($"Inicio de sesión exitoso - Usuario: {username}");
        }
        else
        {
            Console.WriteLine($"Inicio de sesión fallido - Usuario: {username}");
            loginError = true;
        }
    }
}

<h3>Login</h3>

<EditForm OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label for="username">Usuario:</label>
        <InputText id="username" @bind="@username" class="form-control" />
        <ValidationMessage For="@(() => username)" />
    </div>

    <div class="form-group">
        <label for="password">Contraseña:</label>
        <InputPassword id="password" @bind="@password" class="form-control" />
        <ValidationMessage For="@(() => password)" />
    </div>

    <button type="submit" class="btn btn-primary">Iniciar sesión</button>

    @if (loginError)
    {
        <div class="alert alert-danger mt-3" role="alert">
            Usuario o contraseña incorrectos. Por favor, inténtalo de nuevo.
        </div>
    }
</EditForm>
